
@model List<CartItem>

@if (Model.Count == 0)
{
    <span class="alert alert-warning">Sepetinizde ürün bulunmamaktadır</span>
}
else
{
    <div class=" container col-md-8" style="margin-top:80px">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th>Fiyat</th>
                    <th>Adet</th>
                    <th>Toplam Fiyat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CartItem item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Quantity * item.Price)</td>
                    </tr>
                }
                <tr>
                    <td colspan="4" align="right">Sepet Tutarı : @Model.Sum(a => a.Quantity * a.Price) ₺ </td>
                </tr>
                <tr>
                    <td colspan="4" align="right"><a href="/Order/PersonDetail" class="btn btn-outline-info">Sepeti Onayla</a></td>
                </tr>
            </tbody>
        </table>
    </div>
    
        }


