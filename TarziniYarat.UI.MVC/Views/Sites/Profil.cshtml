@model TarziniYarat.Model.Person

@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_LayoutSites.cshtml";
}

<h2>Profil</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Person</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <br />
        <br />
        <br />
        <div>
            <form id="UpdateCategory">
                <div>
                    @Html.HiddenFor(a => a.PersonID, new { id = Model.PersonID })
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input class="form-control" type="text" name="tckn" id="tckn" placeholder="TC Kimlik No Giriniz." value="@Model.TCKN" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input class="form-control" type="text" name="name" id="name" placeholder=" Adınızı Giriniz." value="@Model.Name" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input class="form-control" type="text" name="soyad" id="soyad" placeholder="Soyadınızı Giriniz." value="@Model.Surname" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input class="form-control" type="text" name="username" id="username" placeholder="Kullanıcı adınızı(mail) Giriniz." value="@Model.Username" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input class="form-control" type="text" name="sifre" id="sifre" placeholder="Şifrenizi Giriniz." value="@Model.Password" />
                    </div>
                </div>
                <button href="#" class="btn btn-primary btnUpdate" type="submit">
                    Güncelle
                </button>
            </form>

        </div>

    </div>
}