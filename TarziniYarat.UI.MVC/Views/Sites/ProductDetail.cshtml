@model TarziniYarat.Model.Product
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_LayoutSites.cshtml";
}


<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-center">
                <br />
                <br />
                <h2>Ürün Detay</h2>
                <div class="page_link">
                    <a href="/Sites/HomePage">Ana Sayfa</a>
                    <a href="/Sites/ProductDetail">Ürün Detay</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Single Product Area =================-->
<div class="product_image_area">
    <div class="container">
        <div class="row s_product_inner">
            <div class="col-lg-6">
                <div class="s_product_img">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                @{
                                    var base65 = Convert.ToBase64String(Model.Photo);
                                    var img2 = string.Format("data:image/gif;base64,{0}", base65);
                                }
                                <img class="d-block w-100" src="@img2" alt="First slide">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 offset-lg-1">
                <div class="s_product_text">
                    @* Ürün adı buraya *@
                    <h3>@Model.ProductName</h3>
                    @* Ürün fiyatı buraya *@
                    <h2>@Model.UnitPrice TL</h2>
                    <ul class="list">
                        <li>
                            <a class="active" href="#">
                                @* Kategori adı buraya *@
                                <span>Kategori</span> : @Model.Category.CategoryName
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                @* stok miktarı buraya *@
                                <span>Stok Miktarı</span> : Son @Model.UnitsInStock Adet Ürün
                            </a>
                        </li>
                    </ul>
                    @* Ürün açıklaması buraya *@
                    <p>@Model.Description </p>
                    <div class="product_count">
                        <label for="qty">Adet:</label>
                        @* Ürün miktarı (alınacak) *@
                        <input type="text" name="qty" id="sst" maxlength="12" value="1" title="Quantity:" class="input-text qty">
                        <button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst )) result.value++;return false;"
                                class="increase items-count" type="button">
                            <i class="lnr lnr-chevron-up"></i>
                        </button>
                        <button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst ) &amp;&amp; sst > 0 ) result.value--;return false;"
                                class="reduced items-count" type="button">
                            <i class="lnr lnr-chevron-down"></i>
                        </button>
                    </div>
                    <div class="card_area">
                        <a href="javascript:void(0)" data-productID="@Model.ProductID" class="addCart btn btn-primary">Sepete Ekle</a>
                        <a href="/Card/List" class="btn btn-outline-primary">Sepete Git</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--================End Single Product Area =================-->
