@model TarziniYarat.Model.Product
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_LayoutSites.cshtml";
}


<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-center">
                <br />
                <br />
                <h2>Ürün Detay</h2>
                <div class="page_link">
                    <a href="/Sites/HomePage">Ana Sayfa</a>
                    <a href="/Sites/ProductDetail">Ürün Detay</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Single Product Area =================-->
<div class="product_image_area">
    <div class="container">
        <div class="row s_product_inner">
            <div class="col-lg-6">
                <div class="s_product_img">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                @{
                                    var base65 = Convert.ToBase64String(Model.Photo);
                                    var img2 = string.Format("data:image/gif;base64,{0}", base65);
                                }
                                <img class="d-block w-100" src="@img2" alt="First slide">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 offset-lg-1">
                <div class="s_product_text">
                    @* Ürün adı buraya *@
                    <h3>@Model.ProductName</h3>
                    @* Ürün fiyatı buraya *@
                    <h2>@Model.UnitPrice TL</h2>
                    <ul class="list">
                        <li>
                            <a class="active" href="#">
                                @* Kategori adı buraya *@
                                <span>Kategori</span> : @Model.Category.CategoryName
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                @* stok miktarı buraya *@
                                <span>Stok Miktarı</span> : Son @Model.UnitsInStock Adet Ürün
                            </a>
                        </li>
                    </ul>
                    @* Ürün açıklaması buraya *@
                    <p>@Model.Description </p>
                    <div class="product_count">
                        <label for="qty">Adet:</label>
                        @* Ürün miktarı (alınacak) *@
                        <input type="text" name="qty" id="sst" maxlength="12" value="1" title="Quantity:" class="input-text qty">
                    </div>
                    <div class="card_area">
                        <a href="javascript:void(0)" data-productID="@Model.ProductID" class="addCart btn btn-primary">Sepete Ekle</a>
                        <a href="/Card/List" class="btn btn-outline-primary">Sepete Git</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--================End Single Product Area =================-->
<!--================Product Description Area =================-->
<section class="product_description_area">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Yorumlar</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="comment_list">
                            <div class="review_item">
                                <div class="media">
                                    @*<div class="d-flex">
                                            <img src="~/Assets/img/review-1.png" />
                                        </div>*@
                                    @foreach (ProductComment item in ViewBag.Comment)
                                    {
                                        <div class="media-body">
                                            @* Yorum yapanın adı *@
                                            <h4>@item.UserName</h4>
                                            @* yorum tarihi *@
                                            <h5>@item.CreatedDate</h5>
                                            <a class="reply_btn" href="#">Cevapla</a>
                                        </div>
                                        <div class="media-body">
                                            <p>@item.Content</p>
                                        </div>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="review_box">
                            <h4>Yorum Yap</h4>
                            @using (Html.BeginForm("AddComment", "Sites", FormMethod.Post))
                            {

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="email" class="form-control" id="email" name="email" placeholder="Mail">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <textarea class="form-control" name="message" id="message" rows="1" placeholder="Yorum"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12 text-right">
                                    @Html.ActionLink("Gönder", "ProductDetail", new { id = Model.ProductID })
                                    @*<button type="submit" value="submit" class="btn submit_btn">Gönder</button>*@
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Product Description Area =================-->



@section scripts{
    <script>
        $(".addCart").click(function () {
            var productID = $(this).attr("data-productID");

            $.ajax({
                type: "GET",
                url: "/Card/AddToCart?productID=" + productID,
                success: function (data) {
                    if (data == "Ürün bulunamadı") {
                        alert("Yanlış ürün eklediniz");
                    }
                    else {
                        alert("Sepetteki ürün sayısı : " + data);
                    }
                }
            });

        });
    </script>
}